#! /usr/bin/env nix-shell
#! nix-shell --show-trace ./updater-emacs.nix -i bash

SCRIPT_DIR="$( cd "$(dirname "$0")" ; pwd -P )"

exec emacs --batch --quick -l "$SCRIPT_DIR/update-elpa.el" \
    -f "run-updater" "elpa-devel" "https://elpa.gnu.org/devel/" "recipes-archive-elpa-devel.json" \
    --kill \
    "$@"
